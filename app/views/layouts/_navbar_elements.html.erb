<% if !user_signed_in? %>
  <li><a href="/users/sign_in">Sign In</a></li>
  <li><a href="/users/sign_up">Sign Up</a></li>
<% else %>
  <li>
    <div class="chip">
      <img class="navbar-user-image" src="<%= current_user.image %>">
      <a href="/profile/<%= current_user.id %>">
        <%= current_user.name %>
      </a>
    </div>
  </li>
<% end %>
