<div class="row">
  <div class="col s12 m6">
    <div class="card grey lighten-5 z-depth-1">
      <div class="card-content black-text">
        <span class="card-title">
          <a href="<%= get_profile_url(post.user) %>">
            <div class="col s2">
              <img src="<%= post.user.image %>" alt="<%= post.user.name %>'s picture" class="circle responsive-img">
            </div>
            <div class="col s10">
              <span class="black-text">
                <%= post.user.name %>
              </span>
            </div>
          </a>
        </span>

        <p>
          <%= post.text %>
        </p>
      </div>

      <div class="card-action">
        <span class="newsfeed-item-action">
          <i class="fa fa-comments-o" aria-hidden="true"></i>
        </span>

        <span class="newsfeed-item-action">
          <i class="fa fa-thumbs-o-up" aria-hidden="true"></i>
        </span>
      </div>
    </div>
  </div>
</div>
